<UserControl x:Class="WordSolver.WordDisplay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wc="clr-namespace:WordSolver"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480"
    d:DataContext="{d:DesignData Source=SampleData/WordDisplaySample/WordDisplaySample.xaml}">
    
    <UserControl.Resources>
        <wc:WordDisplayConverter x:Key="WordDisplayConverter1" />
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot">
        <StackPanel Orientation="Horizontal" x:Name="TilePanel">            
        </StackPanel>
    </Grid>
</UserControl>
